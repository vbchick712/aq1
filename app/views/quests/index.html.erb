<p id="notice"><%= notice %></p>
<%= link_to 'New Quest', new_quest_path, class:'waves-effect waves-light btn-flat' %>
<h4>Quests As QM</h4>

<table class="highlight bordered ">
  <thead>
    <tr>
      <td>Name</td>
      <td>Quest Date</td>
      <td>Quest Time</td>
      <th></th>
    </tr>
  </thead>

  <tbody>

    <% @questmaster.each do |quest| %>
      <tr>
        <td><strong><%= quest.name %></strong></td>
        <td><%= quest.start.strftime("%B %d") %></td>
        <td><%= quest.start.strftime("%l:%M %P") %></td>
        <td>
          <!-- Dropdown Trigger -->
          <a class='dropdown-button btn' href='#' data-activates='dropdown1'>Options</a>
          <!-- Dropdown Structure -->
          <ul id='dropdown1' class='dropdown-content'>
            <li><%= link_to 'Show', quest %></li>
            <li class="divider"></li>
            <li><%= link_to 'Edit', edit_quest_path(quest) %></li>
            <li class="divider"></li>
            <li><%= link_to 'Destroy', quest, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
          </td>
      </tr>
    <% end %>
  </tbody>
  </table>

<h4>Quest as Participant</h4>
    <table class=" highlight bordered">
      <thead>
        <tr>
          <td>Name</td>
          <td>Quest Date</td>
          <td>Quest Time</td>
          <th></th>
        </tr>
      </thead>
    <% x=0%>
    <% @participant.each do |quest| %>
      <tr>
        <td><%= quest.name %></td>
        <td><%= quest.start.strftime("%B %d") %></td>
        <td><%= quest.start.strftime("%l:%M %P") %></td>
        <td>
          <!-- Dropdown Trigger -->
          <a class='dropdown-button btn indigo' href='#' data-activates='dropdown2'>Options</a>
          <!-- Dropdown Structure -->
          <ul id='dropdown2' class='dropdown-content'>
          <% if quest.start <= @time %>
            <li><a class= "indigo-text">No Peeking!!</a></li>
            <li><a class= "indigo-text"href="#modal_invite">See Invite message</a></li>
          <% else %>
            <li><%= link_to 'Start the Quest!', quests_showtime_path(quest) %></li>
          <% end -%>
            
          </ul>
          </td>
      </tr>
      <% x+=1 %>
      <!-- Modal Structure -->
  <div id="modal_invite" class="modal">
    <div class="modal-content">
      <h4>Invite message</h4>
      <p><%= quest.invite_msg %></p>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>
    <% end %>
  </tbody>
</table>

