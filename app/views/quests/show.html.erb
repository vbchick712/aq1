<h4><%= @quest.name %></h4>

<h6><%= @quest.description%></h6>

<p><strong>Quest Date: </strong><%= @quest.start.strftime("%B %d")%> </p>

<p><strong>Quest Time: </strong><%= @quest.start.strftime("%l:%M %P")%></p>

<p>Invite Message: <%= @quest.invite_msg %></p>

<p>Start Message: <%= @quest.start_msg %></p>

<p>Final Message: <%= @quest.final_msg %></p>

<p>Total Tasks: <%= @quest.tasks.count %></p>
<br>
<%= link_to 'Edit Quest', edit_quest_path(@quest), class:'collection-item btn indigo' %>
<br>
<ul id="tabs-swipe-demo" class="tabs ">
	<% x = 1%>
	<% @quest.tasks.sort.each do |task| %>
		<% id = "#test-swipe-" + task.id.to_s %>
		<li class="tab col s3 "><a href=<%= id%> class="black-text text-darken-2">Task <%= x%> </a></li>
		<% x +=1 %>
    <% end %>
</ul>
<% @quest.tasks.each do |task| %>
<% id = 'test-swipe-' + task.id.to_s %>
<div id=<%=id%> class="col s12 #f5f5f5 grey lighten-4">
	<p><%= task.name %></p>
	<p>Task: <%= task.description %></p>
	<p></p>
	<p>Clue 1: <%= task.clue1 %></p>
	<p></p>
	<p>Clue 2: <%= task.clue2 %></p>
	<p></p>
	<p>Clue 3: <%= task.clue3 %></p>
	<p></p>
	<p>Clue Timer: <%= task.clue_timer %> minutes</p>
	<p></p>
	<p>Answer: <%= task.answer %></p>
	<p></p>
	<p>Correct Answer Comment: <%= task.answer_comment %></p>
	<p></p>
	<p>Skip Task Comment: <%= task.skip_comment %></p>
	<p></p>
	<div class="collection">
		<%= link_to 'Edit Tasks', edit_quest_task_path(task.id), class:'collection-item black-text text-darken-2' %>
		<%= link_to 'Add Task', new_quest_task_path(@quest), class:'collection-item black-text text-darken-2' %>
	</div>
</div>
<% end %>
<ul class="collection">
	<li class="collection-item heading"> Participants</li>
	<% a =0 %>
	<% @quest.roles.each do |role| %>
	<% a += 1%>
	<% if role.role == false %>
		<li class="collection-item avatar">
			<% if a % 2 == 0 %>
				<%#= image_tag 'happy_group_selfie.jpg', class: 'circle'%>
				<img src = "http://lorempixel.com/75/75/animals/profile_pic", class: 'circle'/>
			<% else %>
				<img src = "http://lorempixel.com/75/75/cats/profile_pic", class: 'circle'/>
				<!-- <i class="material-icons circle">perm_identity</i> -->
			<% end %>
			<h6><%= role.user.name %></h6>
			<!-- <p><%= role.user.email %></p> -->
			<!-- <p>Invited</p> -->
		</li>
	<% end -%>
<% end -%>
<%= link_to 'Add Participant', users_invite_path(@quest), class:'collection-item black-text text-darken-2' %>

</ul>
<div class="collection">
<%= link_to 'All Tasks', quest_tasks_path(@quest), class:'collection-item black-text text-darken-2' %>
<%= link_to 'Quest Home', quests_path, class:'collection-item black-text text-darken-2' %>
</div>
