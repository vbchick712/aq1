<p id="notice"><%= notice %></p>

<h4><%= @quest.name %></h4>

<div class="input-field col s6">Quest Date: <%= @quest.start.strftime("%Y-%m-%d")%> </div>

<div class="input-field col s6">Quest Time: <%= @quest.start.strftime("%l:%M %P")%></div>

<div class="input-field col s6">Invite Message: <%= @quest.invite_msg %></div>

<div class="input-field col s6">Start Message: <%= @quest.start_msg %></div>

<div class="input-field col s6">Final Message: <%= @quest.final_msg %></div>

<div class="input-field col s6">Total Tasks: <%= @quest.tasks.count %></div>
<ul id="tabs-swipe-demo" class="tabs ">
	<% @quest.tasks.each do |task| %>
		<% id = "#test-swipe-" + task.id.to_s %>
		<li class="tab col s3 "><a href=<%= id%> class="blue-text text-darken-2"><%= task.name %></a></li>	
    <% end %>
</ul>
<% @quest.tasks.each do |task| %>
<% id = 'test-swipe-' + task.id.to_s %>
<div id=<%=id%> class="col s12 #f5f5f5 grey lighten-4">
	<p>Task: <%= task.description %></p>
	<p></p>
	<p>Clue 1: <%= task.clue1 %></p>
	<p></p>
	<p>Clue 2: <%= task.clue2 %></p>
	<p></p>
	<p>Clue 3: <%= task.clue2 %></p>
	<p></p>
	<p>Clue Timer: <%= task.clue_timer %></p>
	<p></p>
	<p>Answer: <%= task.answer %></p>
	<p></p>
	<p>Correct Answer Comment: <%= task.answer_comment %></p>
	<p></p>
	<p>Skip Task Comment: <%= task.skip_comment %></p>
	<p></p>
	<div class="collection">
		<%= link_to 'Edit Tasks', task_path(task.id), class:'collection-item' %>
	</div>
</div>
<% end %>
<p>Participants: </p>
<p>[Consider adding a status code of "confirmed" or "pending acceptance"]</p>

<div class="collection">
<%= link_to 'Add Participant', users_invite_path(@quest), class:'collection-item'  %>
<%= link_to 'Add Task', new_task_path(@quest), class:'collection-item' %>
<%= link_to 'Edit Quest', edit_quest_path(@quest), class:'collection-item' %>
<%= link_to 'Quest Home', quests_path, class:'collection-item' %>
</div>