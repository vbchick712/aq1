<h3><%= @task.quest.name%></h3>
<h4> Task</h4>
<%= form_for @task do |f| %>
	
	<p>
		<strong> <%= @task.quest.name %> </strong>
	</p>

	<div class = "input-field col s6">

		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class = "input-field col s6">
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>

  <div class = "input-field col s6">
		<%= f.label :clue1 %>
		<%= f.text_field :clue1 %>
	</div>

  <div class = "input-field col s6">
    <%= f.label :clue2 %>
    <%= f.text_field :clue2 %>
  </div>

  <div class = "input-field col s6">
    <%= f.label :clue3 %>
    <%= f.text_field :clue3 %>
  </div>

	<div class = "input-field col s6">
		<%= f.label :clue_timer, "Timer (minutes)" %> 
		<%= f.number_field :clue_timer %> 
	</div>

  <div class = "input-field col s6">
		<%= f.label :answer %>
		<%= f.text_field :answer %>
	</div>

  <div class = "input-field col s6">[insert a checkbox here confirm if answer must be an exact match]</div>

	<div class = "input-field col s6">
		<%= f.label :answer_comment %>
		<%= f.text_field :answer_comment %>
	</div>
	<div class = "input-field col s6">
		<%= f.label :skip_comment %>
		<%= f.text_field :skip_comment %>
	</div>

<div class = "input-field col s6">There is a hidden field here that lists the quest_id, but idk how it works</div>
	<div class = "input-field col s6">
		<%= f.hidden_field :quest_id %>
	</div>

	<div class = "input-field col s6">The submit link doesn't go anywhere and this form doesn't assign a quest_id to this task</div>

	<%= f.submit 'Add Task',class:'btn waves-effect waves-light'%>
	</div>

	<% end %>
