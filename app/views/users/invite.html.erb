<h1> Invite Participants</h1>

<%= form_with url: quest_path(params[:format]), method: :get do |f| %>

  <%= f.hidden_field :quest_id, value: @user %>

  <div class="input-field col s6">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="input-field col s6">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>

	<div class="input-field col s6">
	<%= f.submit 'Send Invitation', class: 'btn waves-effect waves-light' %>
	</div>

	<% end %>
