<h4> Sign up</h4>
<%= form_for @user do |f| %>
	<div class="input-field col s6">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="input-field col s6">
		<%= f.label :email %>
		<%= f.email_field :email %>
	</div>

	<div class="input-field col s6">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>

	<div class="input-field col s6">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>

	<p>
	<%= f.submit class:'btn waves-effect waves-light'%>
	</p>

	<% end %>
